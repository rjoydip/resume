{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "vitest/globals",
      "vitest/jsdom"
    ],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.{ts,tsx}",
    "src/**/*.{ts,tsx}",
    "test/{specs,e2e}/*.test.{ts,tsx}",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
