{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "vitest/globals",
      "vitest/jsdom",
      "@vitest/browser/providers/playwright"
    ],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "test/node/*.test.ts",
    "test/{edge,e2e,jsdom}/*.test.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    ".next",
    "node_modules"
  ]
}
