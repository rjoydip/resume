{
  "name": "rjresume",
  "version": "0.2.0",
  "private": true,
  "packageManager": "bun@1.2.2",
  "scripts": {
    "prepare": "husky && playwright install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --fix",
    "test": "bun run test:dom && bun run test:node && bun run test:e2e",
    "test:dom": "vitest run --typecheck --mode dom",
    "test:node": "vitest run --typecheck --mode node",
    "test:e2e": "start-server-and-test start http://localhost:3000 'vitest run --typecheck --mode e2e'",
    "deps:update": "taze -r -w -i -f -l"
  },
  "dependencies": {
    "@antfu/eslint-config": "^3.16.0",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.66.0",
    "@vercel/blob": "^0.27.1",
    "@vercel/speed-insights": "^1.1.0",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.474.0",
    "next": "^15.1.6",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "std-env": "^3.8.0",
    "tailwind-merge": "^3.0.1",
    "titleize": "^4.0.0",
    "valibot": "^0.30.0"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.26.1",
    "@million/lint": "^1.0.14",
    "@ngneat/falso": "^7.3.0",
    "@stylistic/eslint-plugin-ts": "^3.0.1",
    "@tanstack/react-query-devtools": "^5.66.0",
    "@testing-library/react": "^16.2.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/node": "^22.13.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.0.5",
    "@vitest/coverage-istanbul": "^3.0.5",
    "autoprefixer": "^10.4.20",
    "envinfo": "^7.14.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "fast-xml-parser": "^4.5.1",
    "happy-dom": "^16.8.1",
    "husky": "^9.1.7",
    "imagemin-lint-staged": "^0.5.1",
    "lint-staged": "^15.4.3",
    "msw": "^2.7.0",
    "playwright": "^1.50.1",
    "postcss": "^8.5.1",
    "react-scan": "^0.1.3",
    "start-server-and-test": "^2.0.10",
    "tailwindcss": "^3.4.17",
    "taze": "^18.3.1",
    "tsx": "^4.19.2",
    "turbo": "^2.4.0",
    "typescript": "^5.7.3",
    "vercel": "^40.1.0",
    "vitest": "^3.0.5",
    "vitest-dom": "^0.1.1"
  },
  "lint-staged": {
    "*.{css,js,jsx,ts,tsx,json,md,yaml}": "eslint --fix",
    "*.{png,jpeg,jpg,gif,svg}": "imagemin-lint-staged"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-tailwindcss"
